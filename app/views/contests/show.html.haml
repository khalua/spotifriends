.row
  .large-5.columns
    %h2= @contest.name
    %h5
      Created by:
      = @owner.first_name
    %h5
      Description:
      = @contest.description
    %h5
      = @contest.start_date
      to
      = @contest.end_date
      - if !@auth.in?(@contest.entries) #user does not have an entry in this contest
        = link_to 'Add your song', new_contest_song_path(@contest), :class => 'button radius'

  .large-7.columns
    %h2 Songs in this contest
    %table
      %theader
        %tr
          %th Vote
          %th Song
          %th Artist
      %tbody
      - @songs.each do |song|
        %tr
          %td BUTTON
          %td= link_to(song.title, song.spy_url)
          %td= song.artist